<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout"
    tools:context=".AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:title="@style/Theme.AppCompat.Light.NoActionBar">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="15dp"
        android:layout_below="@id/my_toolbar"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_title"
            android:text="About us"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/about_title"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:ems="30"
            android:inputType="textMultiLine"
            android:fontFamily="@font/ubuntu_light"
            android:text="Aquascaping is an art of bringing aquatic life to home. Aquamachine guides its customers with the possible way to do so. Nature is a very crucial element of our life, but with urbanization people have lost their touch with nature. We are in a voyage to make peopleâ€™s life more beautiful by bringing nature at home."
            android:padding="10dp" />

    </LinearLayout>

</RelativeLayout>